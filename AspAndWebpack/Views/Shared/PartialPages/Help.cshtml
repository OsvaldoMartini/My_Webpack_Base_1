@model IHS.Apps.CMP.Models.ViewModels.HelpDataModel



<div >
    <div >

        @if (!string.IsNullOrEmpty(Model.CategoryKey))
        {
            <a href="helpIndicatorDownload.axd?catKey='@Model.CategoryKey" class="tipsyMe helpIndicatorDownloadLink pull-right" title="Download Help" target="new"><i class="icon-file-pdf"></i></a>
        }

        <h4 class="helpIndicatorTitle ">
            @Model.AlternativeTitle
        </h4>
    </div>
    <div class="helpIndicatorContent ">
        @Html.Raw(Model.HelpContent)
    </div>
    <ul class="helpIndicatorList">
        @foreach (var sub in Model.HelpSubItems)
        {
            <li>
                <span class='helpIndicatorItemTitle'><b>@sub.Key</b> - </span>
                <span class='helpIndicatorItemContent'>@sub.Value</span>
            </li>
        }
    </ul>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>