@model  IHS.Apps.CMP.Models.ViewModels.Carousel
@{    
    var containerId = CmpHtmlHelpers.CreateUniqueId("thumbs");
}
@*<script>
    var $container = $("#@containerId");
    $container.imagesLoaded(function(){
        $container.masonry();
    });
</script>*@
<div id="@containerId" class="card-thumbnails">

    @foreach (var carouselItem in Model.Items)
    {
        <a href="@carouselItem.Link" class="card">
            <div>
                @if (!string.IsNullOrEmpty(carouselItem.ImageName))
                {
                    <p class="img">
                        <img src="@carouselItem.ImageName" alt="@HttpUtility.HtmlDecode(carouselItem.Text)" />
                    </p>
                }
                <p>@carouselItem.Heading</p>
                <p>@HttpUtility.HtmlDecode(carouselItem.Text)</p>
                <p>@carouselItem.Date</p>
                @*@if (!string.IsNullOrEmpty(carouselItem.Link))
                    {
                        <p>
                            <span class="btn btn-primary" role="button" target="_blank">@this.LocalResources("View")</span>
                        </p>
                    }*@
            </div>
        </a>
    }
    <div style="clear:both;"></div>
</div>
@if (Model.Links != null && Model.Links.Count() > 0)
{
    @Html.Partial("Widget/LinkListWidget", Model.Links);
}